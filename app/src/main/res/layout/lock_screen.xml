<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logotrial4" />

    <RelativeLayout
        android:id="@+id/rlPasscodeOuter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_keypad"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="Enter Passcode"
            android:textColor="@color/colorMyWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llpasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPasscode"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPasscode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/circular_background" />

            <ImageView
                android:id="@+id/ivPasscode1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/circular_background2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivPasscode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode1"
                android:background="@drawable/circular_background" />

            <ImageView
                android:id="@+id/ivPasscode2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode1"
                android:background="@drawable/circular_background2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivPasscode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode2"
                android:background="@drawable/circular_background" />

            <ImageView
                android:id="@+id/ivPasscode3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode2"
                android:background="@drawable/circular_background2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivPasscode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode3"
                android:background="@drawable/circular_background" />

            <ImageView
                android:id="@+id/ivPasscode4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/ivPasscode3"
                android:background="@drawable/circular_background2"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/num_keypad"
        layout="@layout/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>