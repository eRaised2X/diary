<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_actionbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/background_toolbar"
    android:minHeight="?attr/actionBarSize"
    android:orientation="horizontal"
    android:weightSum="5"
    >


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>
    <ImageButton
        android:id="@+id/iv_keyboard_alt_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/button_background"
        android:src="@drawable/icon_keyboard_alt_grey" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/iv_star_border_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/button_background"
        android:src="@drawable/icon_favorite_outline_grey" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/iv_save_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/button_background"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/icon_save_grey" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/iv_cloud_upload_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/button_background"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/icon_cloud_upload_grey" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/iv_font_option_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/button_background"
        android:src="@drawable/icon_temp_font_option" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

</LinearLayout>