<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#30435a</item>
        <!--5A4289-->
        <!--1F1839-->
        <!--393158-->
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#30435a</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#30435a</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
        <item name="tabIndicatorHeight">@dimen/dimen_tab_indicator_height</item>
        <item name="tabPaddingStart">@dimen/dimen_tab_padding_start</item>
        <item name="tabPaddingEnd">@dimen/dimen_tab_padding_end</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTabSelected</item>
        <item name="android:selectable">true</item>

    </style>



    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen_tab_text_size</item>
        <item name="android:textColor">@color/colorTabText</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="custom_keypad_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/custom_keypad_separator</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="keypad_symbol_key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
    </style>

    <style name="keypad_num_key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>


    <style name="customTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMyWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>