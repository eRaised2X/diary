<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#30294A</item>
        <!--5A4289-->
        <!--1F1839-->
        <!--393158-->
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#463862</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
        <item name="tabIndicatorHeight">@dimen/dimen_tab_indicator_height</item>
        <item name="tabPaddingStart">@dimen/dimen_tab_padding_start</item>
        <item name="tabPaddingEnd">@dimen/dimen_tab_padding_end</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTabSelected</item>
    </style>



    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen_tab_text_size</item>
        <item name="android:textColor">@color/colorTabText</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
